<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Logo file name</th>
      <th>Logo file size</th>
      <th>Logo content type</th>
      <th>Logo updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.desc %></td>
        <td><%= course.logo_file_name %></td>
        <td><%= course.logo_file_size %></td>
        <td><%= course.logo_content_type %></td>
        <td><%= course.logo_updated_at %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
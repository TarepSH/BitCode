<meta charset="UTF-8">
<% metamagic site: "BitCode", title: [:site, :title], separator: " — " %>
<%= metamagic %>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<link rel=”publisher” href=”https://plus.google.com/+BitcodeNetAR”/>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta property="og:type" content="website" />
<meta property="og:locale" content="ar_AR" />
<meta property="og:locale:alternate" content="en_US" />
<meta property="og:site_name" content="BitCode"/>

<% meta og: {image: "http://bit-code.net/image.png"} %>
<% meta twitter: {card: "summary",  site: "@BitCodeAR"} %>

<meta name="author" content="" />
<meta name="robots" content="all" />
<meta name="google-site-verification" content="yUFtA4-JHRIzvwdHHL2-TAi4-Lk3Zy7HvioQ7vTEbOY" />

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= favicon_link_tag 'favicon.ico' %>


<%= if content_for?(:head_tags)
  yield(:head_tags)
end %>
<%= csrf_meta_tags %>

<% if alert && !alert.empty? %>
  <script>
    $(document).ready(function (argument) {
      showNotify("", "<%= alert %>", "error");
    });
  </script>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Challenges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.name %></td>
        <td><%= challenge.desc %></td>
        <td><%= challenge.chapter_id %></td>
        <td><%= link_to 'Show', course_chapter_challenge_path(params[:course_id], params[:chapter_id], challenge)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
